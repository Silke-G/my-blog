<!DOCTYPE html>
<html>
<head>
    <title><%= post.title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/styles.css">
</head>
<body>
    <%- include("partials/header.ejs") %>

    <main class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 px-sm-4"> <div class="card">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title"><%= post.title %></h1>
                        <p class="card-text">
                            By <%= post.author %> on <%= post.date %>
                        </p>
                        <hr>
                        <%- post.content %>

                        <div class="mt-3 d-flex justify-content-end">
                            <div class="mt-3 d-flex justify-content-end" style="gap: 0;"></div>
                            <a href="/edit/<%= encodeURIComponent(post.slug) %>" class="btn btn-sm edit-post-link">Edit</a>
                            <form action="/delete/<%= encodeURIComponent(post.slug) %>" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger delete-post-button" onclick="return confirm('Are you sure you want to delete this post?')">Delete</button>
                            </form>
                        </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <%- include("partials/footer.ejs") %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>